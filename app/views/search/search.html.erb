<div class="container section">

  <h1>Services Search</h1>
  <%= render 'search/form' %>
  <br><br>
  <div class="row">
    <% if @services.blank? %>
      <center>
        <h4>No services found matching <%= params[:q] %>.</h4>
      </center>
    <% end %>
  </div>

  <div class="row">
    <% @services.each do |service| %>
      <%= render partial: 'shared/gigcard', locals: { service: service } %>
    <% end %>
  </div>

</div>

