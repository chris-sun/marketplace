<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
          <%= image_tag avatar_url(current_user), class: "img-circle img-responsive img-seller-avatar" %>
          <h3><%= current_user.fullname %></h3>
        </center>
      </div>

      <div class="panel-body">
        <%= current_user.description %>
      </div>

    </div>
  </div>

  <div class="col-md-8">
    <% if flash[:notice].present? %>
      <div class="row">
        <div class="col-md-8">
          <div class="alert alert-success" role="alert">
            <h3>Welcome <%= current_user.firstname %></h3>
          </div>
        </div>
      </div>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-heading">

        <div class="row">
          <div class="col-md-6">
            <h3>My Gigs</h3>
            <%= link_to "Create a Gig", new_service_path, class: "btn btn-success" %>
          </div>
        </div>

        <div class="panel-body">
          <% @services.each do |service| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag service.image.url(:thumb) %>
              </div>
              <div class="col-md-7">
                <h4><%= service.title %></h4>
              </div>
              <div class="col-md-3">
                <%= link_to "Update", edit_service_path(service), class: "btn btn-default pull-right" %>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>


